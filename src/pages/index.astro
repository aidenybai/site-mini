    <script src="/lanyard.js"></script>
    <script hoist type="module">
      import { render } from 'million';
      import { html } from 'million/html';

      const update = (data) => {
        const el = document.querySelector('.spotify');
        if (data.listening_to_spotify) {
          render(el, html`<span>🎶 <a href="https://open.spotify.com/track/${data.spotify.track_id}"><strong>${data.spotify.song}</strong></a> – ${data.spotify.artist}</span>`);
        } else {
          render(el, html`<span>🎶</span>`);
        }
      };


      lanyard({
        userId: '400835140458250241',
        socket: true,
        onPresenceUpdate: (data) => {
          update(data);
        },
      });
    </script>
